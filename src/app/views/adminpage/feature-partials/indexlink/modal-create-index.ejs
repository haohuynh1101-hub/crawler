<!-- The Modal -->
<div class="modal" id="modal-create-index">
    <div class="modal-dialog">
        <div class="modal-content">


            <div class="modal-header">
                <h4 class="modal-title">Index link</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form action="/indexlink" method="POST">

                <div class="modal-body">

                    <div class="form-group">
                        <label for="links">Tên dự án</label>
                        <input type="text" name='name' class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="links">Danh sách link ( mỗi link trên 1 dòng)</label>
                        <textarea id="links" name='links' class="form-control" required></textarea>
                    </div>
                    <input style="display: none" type="text" name="userid" id='userid-index'>
                </div>

                <div class="modal-footer">
                    <input onclick="alert('Submit thành công')" type="submit" class="btn btn-primary" value="submit" >
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                </div>

            </form>
        </div>
    </div>
</div>