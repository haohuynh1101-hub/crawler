<!--  Modal content for the above example -->
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" id="edit-ad-modal"
    aria-labelledby="ad-form" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content pb-0">
            <div class="modal-header">
                <h4 class="modal-title" id="ad-form">Tạo dự án</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>

            <form method='post' id='edit-ad-form'>
            <div class="modal-body pb-0">
                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group row">
                            <label class="col-3 col-form-label pr-0">Tên dự án</label>
                            <div class="col-8">
                                <input name=name id='edit-projectName_ad' type="text" class="form-control pl-0" data-focus="Tên dự án"
                                    value="">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-3 col-form-label pr-0">Trang chứa quảng cáo cần click</label>
                            <div class="col-8">
                                <input name='domain' id='edit-main_url_ad' type="text" class="form-control pl-0" data-focus="Trang chứa quảng cáo cần click"
                                    value="">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-3 col-form-label pr-0">URL quảng cáo (Mỗi url trên một dòng)</label>
                            <div class="col-8">
                                <textarea name='adURL' id='edit-ad_url' type="text" class="form-control pl-0" data-focus="URL quảng cáo"
                                    value=""></textarea>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label class="col-3 col-form-label">Thời gian view (giây)</label>
                            <div class="col-8">
                                <input name='delay' type="text" id='edit-delay_ad' onkeypress="acceptPositiveNumber(event)"
                                    class="form-control" data-focus="Delay" value="">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-3 col-form-label">Số lượng traffic: </label>
                            
                            <div class="col-8">
                                <select name='amount' id='edit-amount_ad' class="form-control">
                                    <option value="<%- traffic%>"><%- traffic%> </option>
                                    
                                </select>
                                
                            </div>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="row form-group">
                            <div class="checkbox">
                                <input id="checkbox4" type="checkbox" checked disabled>
                                <label for="checkbox4">
                                    Tự động xóa cookies
                                </label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="checkbox">
                                <input id="checkbox3" type="checkbox" checked disabled>
                                <label for="checkbox3">
                                    Tự động thay đổi UserAgent
                                </label>
                            </div>
                        </div>
                        <div class="form-group row" style="visibility: hidden">
                            <div class="checkbox">
                                <input id="" type="checkbox">
                                <label for="">
                                    .
                                </label>
                            </div>
                        </div>
                        <div class="form-group row" style="visibility: hidden">
                            <div class="checkbox">
                                <input id="" type="checkbox">
                                <label for="">
                                    .
                                </label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-9"></div>
                            <div class="col-3">
                                <div class="row">
                                    <button type="submit"
                                        class="btn btn-outline-success w-100 btn-lg">Sửa</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->